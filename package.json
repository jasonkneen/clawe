{
  "name": "clawe",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:docker": "pnpm --filter @clawe/cli build && docker compose up --build openclaw",
    "build:docker": "pnpm --filter @clawe/cli build && docker compose build --no-cache openclaw",
    "debug": "turbo run debug",
    "dev:web": "turbo run dev --filter=web",
    "convex:dev": "turbo run dev --filter=@clawe/backend",
    "convex:deploy": "turbo run deploy --filter=@clawe/backend",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,css,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,css,json}\"",
    "check-types": "turbo run check-types",
    "check": "turbo run lint check-types && pnpm run format:check",
    "fix": "turbo run lint:fix && pnpm run format",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
