{
  "$schema": "https://v2-7-6.turborepo.dev/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": [
        "ENVIRONMENT",
        "NODE_ENV",
        "NEXT_PUBLIC_CONVEX_URL",
        "OPENCLAW_URL",
        "OPENCLAW_TOKEN",
        "INTERNAL_API_URL",
        "NEXT_PUBLIC_API_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "env": [
        "ENVIRONMENT",
        "NODE_ENV",
        "NEXT_PUBLIC_CONVEX_URL",
        "OPENCLAW_URL",
        "OPENCLAW_TOKEN",
        "INTERNAL_API_URL",
        "NEXT_PUBLIC_API_URL"
      ]
    }
  }
}
